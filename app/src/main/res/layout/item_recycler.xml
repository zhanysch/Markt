<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemParent"
    android:clickable="true"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/constr"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@drawable/constr"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageItem"
            android:layout_width="163dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/bg_btn_favorite"
            app:layout_constraintEnd_toEndOf="@id/imageItem"
            app:layout_constraintTop_toTopOf="@id/imageItem"
            android:background="@drawable/bg_title_fostar"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"/>


        <TextView
            android:id="@+id/priceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Цена"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageItem" />

        <TextView
            android:id="@+id/priceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:hint="180 KGZ"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceItem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="за 1 кг"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/priceNumber"
            app:layout_constraintStart_toStartOf="@id/priceNumber"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="@id/priceNumber" />

        <TextView
            android:id="@+id/nameOfFoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gilroy_medium"
            android:hint="blabla"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/priceNumber"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/nameOfFoods"
            android:src="@drawable/ic_baseline_location_on_24"/>

        <TextView
            android:id="@+id/itemCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/location"
            app:layout_constraintBottom_toBottomOf="@id/location"
            android:fontFamily="@font/gilroy_bold"
            app:layout_constraintStart_toStartOf="@id/location"
            android:layout_marginStart="32dp"
            android:textColor="#B80F0A"
            android:hint="жал"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>